{
  "variables": {
    "packer_profile": "packer",
    "branch_name": "{{env `BRANCH_NAME`}}",
    "env": "{{env `TARGET_ENV`}}",
    "bucket": "{{env `ARTIFACT_BUCKET`}}",
    "wl_bucket": "{{env `ZAIZI_BUCKET` }}",
    "image_tag_version": "{{env `IMAGE_TAG_VERSION`}}",
    "ami_users": "{{env `AMI_USERS` }}"
  },
  "provisioners": [
    {
      "type": "ansible-local",
      "playbook_file": "./ansible/oracledb.yml",
      "extra_arguments": [
        "-b",
        "-e artifact_bucket={{user `bucket`}}",
        "-e wl_artefact_bucket={{user `wl_bucket`}}",
        "-e db_version=18c"
      ],
      "galaxy_file": "./ansible/oracledb-requirements.yml",
      "inventory_groups": "oracle18c",
      "group_vars": "./ansible/group_vars"
    }
  ],
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "eu-west-2",
      "iam_instance_profile": "tf-eu-west-2-hmpps-eng-{{user `env`}}-jenkins-ec2-agent-role-instance-profile",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "architecture": "x86_64",
          "name": "HMPPS Base CentOS master *",
          "root-device-type": "ebs"
        },
        "owners": ["895523100917"],
        "most_recent": true
      },
      "instance_type": "t3.large",
      "ami_regions": ["eu-west-2"],
      "ssh_username": "centos",
      "ami_users": ["{{user `ami_users`}}"],
      "ami_name": "HMPPS OracleDB 18c {{user `branch_name`}} {{timestamp}}",
      "tags": {
        "OS_Version": "CentOS Linux 7",
        "Base_AMI_Name": "{{ .SourceAMIName }}",
        "Base_AMI_ID": "{{ .SourceAMI }}",
        "Name": "HMPPS OracleDB 18c {{user `branch_name`}} {{timestamp}}",
        "Git_Branch": "{{user `branch_name`}}",
        "image_tag_version": "{{user `image_tag_version`}}",
        "source-code": "https://github.com/ministryofjustice/hmpps-delius-core-packer"
      },
      "ssh_interface": "private_ip",
      "vpc_id": "vpc-02321f288159e5d0e",
      "subnet_id": "subnet-00982fba28419ac5f",
      "temporary_security_group_source_cidr": "10.0.0.0/8",
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_type": "io1",
          "iops": 1000,
          "volume_size": 50,
          "delete_on_termination": true,
          "encrypted": false
        },
        {
          "device_name": "/dev/xvdb",
          "volume_type": "io1",
          "iops": 1000,
          "volume_size": 256,
          "delete_on_termination": true,
          "encrypted": false
        }
      ]
    }
  ]
}
